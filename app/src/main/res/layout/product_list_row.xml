<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/ivImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/line"/>

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20dp"
            android:textColor="#295000"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivImage"/>

        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#1a4064"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@+id/tvProductName"
            android:text="Price"/>

        <TextView
            android:id="@+id/tvProductCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#1a4064"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/ivImage"
            android:layout_below="@+id/tvProductPrice"
            android:text="Category"/>

        <TextView
            android:id="@+id/tvProductMl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#1a4064"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/ivImage"
            android:layout_below="@+id/tvProductCat"
            android:text="Size: "/>

        <TextView
            android:id="@+id/tvmlNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#b90000"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/tvProductCat"
            android:layout_toRightOf="@+id/tvProductMl"
            android:text="0"/>

        <TextView
            android:id="@+id/tvDisponibles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#1a4064"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ivImage"
            android:text="Availables: "/>

        <TextView
            android:id="@+id/tvProductStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#b90000"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ivImage"
            android:layout_toRightOf="@+id/tvDisponibles"
            android:text="0"/>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvProductCat"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@android:drawable/ic_delete" />

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@android:drawable/ic_menu_edit" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>