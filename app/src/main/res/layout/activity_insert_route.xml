<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rodriguezpacojr.winestore.admin.CRUDRoute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtinsertRoute"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Insert Route"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tilname"
            android:layout_below="@+id/txtinsertRoute"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <EditText
                android:id="@+id/edtnameRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="textCapWords" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/txtEmployee"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Employee"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/tilname" />

        <Spinner
            android:id="@+id/spnEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtEmployee"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/spnEmployee"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Register"/>
    </RelativeLayout>
</ScrollView>