<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/ivImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20dp"
            android:textColor="#295000"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivImage"/>

        <TextView
            android:id="@+id/tvlastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#295000"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvName"
            android:text="Last Name"/>

        <TextView
            android:id="@+id/tvbornDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#1a4064"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/ivImage"
            android:layout_below="@+id/tvlastName"
            android:text="Born Date"/>

        <TextView
            android:id="@+id/tvrfc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#1a4064"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/ivImage"
            android:layout_below="@+id/tvbornDate"
            android:text="RFC"/>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvlastName"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@android:drawable/ic_delete" />

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@android:drawable/ic_menu_edit" />
        </LinearLayout>

        <View
            android:id="@+id/sepatator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#000000"
            android:layout_below="@+id/ivImage"/>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_below="@+id/sepatator" >

            <ImageView
                android:id="@+id/btnCall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_phone_black_24dp" />

            <ImageView
                android:id="@+id/btnMail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_mail_black_24dp"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/btnSms"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_message_black_24dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>